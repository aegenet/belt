{
  "compileOnSave": true,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "ES2020",
    "esModuleInterop": true,
    "sourceMap": true,
    "newLine": "LF",
    "module": "CommonJS",
    "outDir": "./build",
    "alwaysStrict": true
  },
  "exclude": [
    "./node_modules",
    "./samples",
    "./build"
  ],
  "include": [
    "./bench",
    "./src"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
