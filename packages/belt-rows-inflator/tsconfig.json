{
  "compileOnSave": true,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "newLine": "LF",
    "outDir": "./build",
    "typeRoots": [
      "../../node_modules/@types"
    ]
  },
  "exclude": [
    "./node_modules",
    "./samples"
  ],
  "include": [
    "test",
    "src" ],
  "atom": {
    "rewriteTsconfig": false
  }
}
