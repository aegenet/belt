{
  "name": "belt",
  "version": "0.0.0-dev",
  "description": "Belt monorepo",
  "keywords": [
    "tools",
    "utility",
    "javascript",
    "typescript"
  ],
  "main": "index.js",
  "author": "Alexandre Genet",
  "license": "MIT",
  "nyc": {
    "report-dir": "./coverage",
    "temp-dir": "./.nyc_output",
    "sourceMap": true,
    "instrument": true
  },
  "commitlint": {
    "rules": {
      "body-leading-blank": [
        1,
        "always"
      ],
      "footer-leading-blank": [
        1,
        "always"
      ],
      "header-max-length": [
        2,
        "always",
        100
      ],
      "scope-case": [
        2,
        "always",
        "lower-case"
      ],
      "subject-case": [
        2,
        "never",
        [
          "sentence-case",
          "start-case",
          "pascal-case",
          "upper-case"
        ]
      ],
      "subject-empty": [
        2,
        "never"
      ],
      "subject-full-stop": [
        2,
        "never",
        "."
      ],
      "type-case": [
        2,
        "always",
        "lower-case"
      ],
      "type-empty": [
        2,
        "never"
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "private": "true",
  "scripts": {
    "clean": "node ./.build/build-flow.js clean",
    "dependencies": "node ./.build/build-flow.js dependencies",
    "lint": "node ./.build/build-flow.js lint",
    "build": "node ./.build/build-flow.js build",
    "test": "node ./.build/build-flow.js test",
    "publish": "node ./.build/build-flow.js publish",
    "upgrade": "yarn cache clean && node ./.build/build-flow.js upgrade",
    "local": "node ./.build/build-flow.js local",
    "local:publish": "node ./.build/build-flow.js localPublish",
    "delete": "node ./.build/build-flow.js deleteNodeModules",
    "build-n-test": "yarn run cover:clean && yarn run lint && yarn run build && yarn run test && yarn run cover",
    "cover:clean": "rimraf ./coverage/ && rimraf ./.nyc_output/",
    "cover:merge": "node ./.build/coverage.merge.js",
    "cover:report": "nyc report -t ./.nyc_output/ --reporter html --reporter text-summary",
    "cover": "yarn run cover:clean && yarn run cover:merge && yarn run cover:report",
    "generate:readme": "node ./packages/rql-tools-samples-generator/build/cli --dataFile \"./packages/rql-app-playground/public/files/data.yml\" --schemaFile \"./packages/rql-app-playground/public/files/schema.yml\" --rqlFile \"./packages/rql-app-playground/public/files/read.yml\" --rqlFile \"./packages/rql-app-playground/public/files/update.yml\" --rqlFile \"./packages/rql-app-playground/public/files/create.yml\" --rqlFile \"./packages/rql-app-playground/public/files/delete.yml\" --rqlFile \"./packages/rql-app-playground/public/files/functions.yml\" --rqlFile \"./packages/rql-app-playground/public/files/date.yml\" --rqlFile \"./packages/rql-app-playground/public/files/math.yml\" --outDir \"./docs/\" --ejsFile \"./.assets/docs/samples.md.ejs\" "
  },
  "devDependencies": {
    "@aegenet/ya-node-externals": "^1.0.0",
    "@aegenet/ya-vite-banner": "^1.0.1",
    "@commitlint/cli": "^18.4.4",
    "@fastify/pre-commit": "^2.1.0",
    "@types/jest": "^29.5.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.2",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "global-jsdom": "^9.2.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "json": "^11.0.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.2.2",
    "rimraf": "^5.0.5",
    "rollup-plugin-dts": "^6.1.0",
    "source-map-loader": "^4.0.2",
    "source-map-support": "^0.5.21",
    "terser": "^5.26.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  }
}
